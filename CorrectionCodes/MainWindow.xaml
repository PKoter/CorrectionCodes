<Window x:Class="CorrectionCodes.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				mc:Ignorable="d"
				Title="Testowanie kodów detekcji i korekty błędów" Height="450" Width="850" MinWidth="600" MinHeight="600">
	<TabControl x:Name="tabs" TabStripPlacement="Top" SelectionChanged="OnTabSelected" Padding="0" Margin="0" >
		<TabControl.ItemsPanel>
			<ItemsPanelTemplate>
				<TabPanel Margin="0" IsItemsHost="True" />
			</ItemsPanelTemplate>
		</TabControl.ItemsPanel>
	</TabControl>
</Window>
